<?xml version='1.0' encoding='utf-8'?>
<widget id="com.myapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>CoolStayzz</name>
	<description>Home stay management is made much easier with this app!
		Experience the change ! Have a nice stay!!</description>
	<author href="http://www.eclipse.org/thym" email="abishekknpta@gmail.com">
		Eclipse.org -
		Thym
	</author>

	<content src="index.html" />
	<!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<platform name="android">
		<allow-intent href="market:*" />
		<icon src="www/img/icons/ldpi.png" density="ldpi" />
		<icon src="www/img/icons/mdpi.png" density="mdpi" />
		<icon src="www/img/icons/hdpi.png" density="hdpi" />
		<icon src="www/img/icons/xhdpi.png" density="xhdpi" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
	<engine name="android" spec="5.1.0" />
</widget>
